<p id="notice"><%= notice %></p>

<div class="row">   
  <div class="col-md-4">
    <div class="card">
      <div class="card-header">
        <h3><%= @recipe.name %></h3> 
        <p>By: <%= current_user.username %></p>
      </div>
      <div class="card-body">
        <p><%= @recipe.description %></p>
      </div>
    </div>
  </div>   
  <div class="col-md-8"> 
    <!-- this is where images in a carousel will be shown/uploaded -->
  </div>
</div>

<div class="row">
  <div class="col-lg-6">
    <%= link_to "Add Ingredient", new_ingredient_path, remote: true %>
    <div id="ingredient-form" style="display:none;"></div>
  </div>
  <div class="col-lg-6">
    <%= link_to "Add Step", new_direction_path, remote: true %>
    <div id="direction-form" style="display:none;"></div>
  </div>
</div>

<div class="row">
  <div class="col-lg-6">
    <div id="ingredients">
      <div class="card">
        <div class="card-header">
          <h2>Ingredients</h2>
          <div class="card-body">
            <ul>
              <% if @ingredients.nil? %>
                <p>Please enter your ingredients.</p>
              <% else %>
                <div id="ingredients">    
                  <%= render @ingredients %>
                </div>
              <% end %>
            </ul>
          </div>
        </div> 
      </div> 
    </div>
  </div>

  <div class="col-lg-6">
    <div id="directions">
      <div class="card">
        <div class="card-header">
          <h2>Directions</h2>
          <div class="card-body">
            <% if @directions.nil? %>
              <p>Please enter the directions.</p>
            <% else %>
              <div id="directions">    
                <%= render @directions %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%= link_to 'Edit', edit_recipe_path(@recipe) %> |
<%= link_to 'Back', recipes_path %>
