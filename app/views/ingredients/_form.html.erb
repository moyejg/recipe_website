<%= form_with model: @ingredient do |form| %> 
  

  <div class="card card-body bg-light">
    <div class="form-group">
      <%= form.text_field :name, placeholder: "Ingredient", class: "form-control", id: "ingredient-entry" %>
    </div>

    <div class="form-group">
      <%= form.text_field :amount, placeholder: "Amount", class: "form-control", id: "ingredient-entry2" %>
    </div>

    <div class="form-group">
      <%= form.text_field :measurement, placeholder: "Measurement i.e. cups, Tbs, oz.", class: "form-control", id: "ingredient-entry3" %>
    </div>

    <div class="form-group">
      <%= form.hidden_field :recipe_id, value: @recipe.id %>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>
  </div>
<% end %>
