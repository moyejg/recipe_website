<%= form_with(model: @ingredient, remote: true) do |form| %>
  

  <div class="card card-body bg-light">
    <div class="form-group">
      <%= form.text_field :name, placeholder: "Ingredient", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.text_field :amount, placeholder: "Amount", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.text_field :measurement, placeholder: "Measurement i.e. cups, Tbs, oz.", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.hidden_field :recipe_id, value: @recipe.id %>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>
  </div>
<% end %>
